@model List<Habit>

@{
    ViewData["Title"] = "Task Quadrants";
}

<!-- Optional CSS if you have wide tables -->
<style>
    .table-scroll {
        overflow-x: auto;
        display: block;
        white-space: nowrap;
        max-width: 100%;
    }
    

    /* Hide Habit ID and Quadrant ID columns */
    .hidden-column {
        display: none;
    }
</style>


<h2 class="text-center mb-4">Task Quadrants</h2>
<a asp-action="AddTask" class="btn btn-primary mb-3">Add New Task</a>

<div class="container">
    <div class="row">
        <!-- Quadrant 1 -->
        <div class="col-md-6 mb-4">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white text-center">
                    Quadrant 1 (Important & Urgent)
                </div>
                <div class="card-body p-0 table-scroll">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-dark text-center">
                        <tr>
                            <th class="hidden-column">Habit ID</th>
                            <th>Task Name</th>
                            <th>Due Date</th>
                            <th class="hidden-column">Quadrant Id</th>
                            <th>Completed</th>
                            <th>Category</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var x in Model.Where(t => t.QuadrantId == 1))
                        {
                            <tr>
                                <td class="hidden-column">@x.HabitId</td>
                                <td>@x.TaskName</td>
                                <td class="text-center">@x.DueDate</td>
                                <td class="hidden-column">@x.QuadrantId</td>
                                <td class="text-center">@x.Completed</td>
                                <td class="text-center">@x.Category?.CategoryName</td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-info text-white"
                                       asp-controller="Home" asp-action="Edit"
                                       asp-route-id="@x.HabitId">
                                        Edit
                                    </a>
                                    <a class="btn btn-sm btn-danger"
                                       asp-controller="Home" asp-action="Delete"
                                       asp-route-id="@x.HabitId">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

