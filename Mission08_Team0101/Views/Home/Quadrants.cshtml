@* @model List<Application> *@

<h2>Task Quadrants</h2>
<a asp-action="AddTask" class="btn btn-primary mb-3">Add New Task</a>
<div class="container">
    <div class="row">
        <div class="col-2 border border-dark p-3 bg-light text-center font-weight-bold"></div>
        <div class="col-5 border border-dark p-3 bg-light">
            <h4 class="text-center">Urgent</h4>
        </div>
        <div class="col-5 border border-dark p-3 bg-light">
            <h4 class="text-center">Not Urgent</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-2 border border-dark h-4 bg-light text-center font-weight-bold">
            <h4 class="text-center">Important</h4>
        </div>
        <div class="col-5 border border-dark p-3 bg-light">
            <p class="text-center">Quadrant 1</p>
            <table class="table table-striped table-hover table-bordered align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        <th>Movie ID</th>
                        <th>Category</th>
                        <th>Title</th>
                        <th>Year</th>
                        <th>Director</th>
                        <th>Rating</th>
                        <th>Edited</th>
                        <th>Lent To</th>
                        <th>Notes</th>
                        <th colspan="2">Actions</th> <!-- Merged column for better spacing -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td class="text-center">@x.MovieId</td>
                            <td class="text-center">@x.Category.CategoryName</td>
                            <td>@x.Title</td>
                            <td class="text-center">@x.Year</td>
                            <td>@x.Director</td>
                            <td class="text-center">@x.Rating</td>
                            <td class="text-center">@x.Edited</td>
                            <td>@x.LentTo</td>
                            <td class="text-wrap">@x.Notes</td>
                            <td class="text-center">
                                <a class="btn btn-sm btn-info text-white" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">
                                    Edit
                                </a>
                            </td>
                            <td class="text-center">
                                <a class="btn btn-sm btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
        </div>
